<h2><%= @room.title %></h2>

<h3>Comments</h3>
<p><%= link_to 'New Comment', new_room_comments_path(@room), :class => "btn btn-primary"%></p>
   <% for comment in @room.comments %>
      <div class="room_comments">
      	<div class="room_comment"><%= comment.name %>: <%= comment.comment %></div><div class="room_comments_date"><%= time_ago_in_words(comment.created_at) %> ago</div>
  	</div>
   <% end %>



